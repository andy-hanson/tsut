{
	"extends": "tslint:latest",
	"rulesDirectory": [
		"tslint-bin"
	],
	"rules": {
		"export-documentation": true,

		"only-arrow-functions": false,

		"curly": false,
		"indent": [true, "tabs"],
		"interface-name": false,
		"jsdoc-format": false,
		"max-line-length": false,
		"member-access": false,
		"no-bitwise": false,
		"no-console": false,
		"no-construct": false,
		"no-empty": false,
		"no-namespace": false,
		"no-reference": false,
		"no-string-literal": false,
		"no-unused-variable": false,
		"no-var-requires": false,
		"object-literal-sort-keys": false,
		"one-line": false,
        "semicolon": [true, "never"],
		"switch-default": false,
		"trailing-comma": false,
		"typedef": [true, "call-signature"],
		"variable-name": false,
		"whitespace": [true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-module",
			"check-separator",
			"check-type",
			"check-typecast"
		]
	}
}
